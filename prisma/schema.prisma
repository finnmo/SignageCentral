generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Sign {
  id                           String   @id @default(cuid())
  createdAt                    DateTime @default(now())
  updatedAt                    DateTime @updatedAt
  name                         String   @unique
  number                       Int      @unique
  type                         String
  width                        Int
  height                       Int
  customContentEnabled         Boolean  @default(false)
  emergencyNotificationEnabled Boolean  @default(false)
  customContentId              String
  latitude                     Float
  longitude                    Float
  ipAddress                    String
  images                       SignToRollingImage[] // Nullable field
}

model RollingImage {
  id                           String   @id @default(cuid()) 
  createdAt                    DateTime @default(now())
  uploadedBy                   String
  imageUrl                     String   @unique
  imageName                    String   @unique
  signs                        SignToRollingImage[] // Nullable field, Define the relation
  durationHour                 Int
  durationMinute               Int
  durationSecond               Int
}

model SignToRollingImage {
  id        String   @id @default(cuid())
  sign      Sign     @relation(fields: [signId], references: [id])
  signId    String
  rollingImage   RollingImage   @relation(fields: [rollingImageId], references: [id])
  rollingImageId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([signId, rollingImageId])
  @@index([rollingImageId])
} 

model CustomContent {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  image     String
}
